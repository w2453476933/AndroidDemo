<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_height="50dip"
		android:layout_width="match_parent"
		android:gravity="right|center_vertical"
		android:textSize="21sp"
		android:id="@+id/resultText2"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right|center_vertical"
		android:textSize="75sp"
		android:id="@+id/resultText1"
		android:singleLine="true"
		android:layout_gravity="top|right"
		android:layout_weight="1.0"/>

	<TableLayout
		android:layout_height="380dip"
		android:layout_width="match_parent">

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="1"
				android:id="@+id/Bt1"
				android:layout_weight="1"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="2"
				android:id="@+id/Bt2"
				android:layout_weight="1"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="3"
				android:id="@+id/Bt3"
				android:layout_weight="1"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="＋"
				android:id="@+id/BtAdd"
				android:layout_weight="1"
				android:textSize="36sp"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<Button
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="4"
				android:id="@+id/Bt4"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="5"
				android:id="@+id/Bt5"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="6"
				android:id="@+id/Bt6"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="－"
				android:id="@+id/BtSub"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="7"
				android:id="@+id/Bt7"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="8"
				android:id="@+id/Bt8"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="9"
				android:id="@+id/Bt9"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="×"
				android:id="@+id/BtMul"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="."
				android:id="@+id/BtPoint"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="0"
				android:id="@+id/Bt0"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="←"
				android:id="@+id/BtDel"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="÷"
				android:id="@+id/BtDiv"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="CE"
				android:id="@+id/BtCE"
				android:layout_weight="1.0"
				android:textSize="36sp"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="＝"
				android:id="@+id/BtEqu"
				android:layout_weight="1"
				android:textSize="36sp"/>

		</TableRow>

	</TableLayout>

</LinearLayout>

